---
<section id="jobs" class="py-20">
  <ContentWidth>
    <div>
      <Title text="Nuestros trabajos"/>
      <section class="grid gap-4 lg:gap-10 grid-cols-1 md:grid-cols-2">
        {jobsList.map((job) => (
            <article
                class="relative rounded-3xl overflow-hidden shadow-xl group hover:shadow-2xl transition-shadow duration-300"
            >
              <img
                  src={job.image}
                  alt={job.title}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500 filter brightness-85 contrast-125"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500" />
              <a
                  href={job.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="absolute top-4 right-4 p-3 bg-white rounded-full shadow-lg hover:scale-110 focus:scale-110 transition-transform duration-300 ring-2 ring-transparent hover:ring-blue-400 focus:ring-blue-400"
                  aria-label={`Visitar ${job.title}`}

              >
                ðŸ”—
              </a>
              <div class="absolute bottom-0 left-0 w-full">
                <div class="backdrop-blur-sm px-5 py-3 transform transition-transform duration-500">
                  <h3 class="text-white text-lg font-semibold truncate">
                    {job.title}
                  </h3>
                </div>
              </div>
            </article>
        ))}
      </section>
    </div>
  </ContentWidth>
</section>
